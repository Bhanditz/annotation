<beans:beans
        xmlns="http://www.springframework.org/schema/security"
        xmlns:beans="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:util="http://www.springframework.org/schema/util"
        xmlns:context="http://www.springframework.org/schema/context"
		xmlns:mvc="http://www.springframework.org/schema/mvc"
    	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd 
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
        ">
    
    <!-- USING OTHER MODULES -->
	<beans:import resource="annotation-definitions-context.xml"/>
<!-- will be already imported by annotation-mongo	
	<beans:import resource="api2-common-context.xml"/>
 -->	
	<beans:import resource="annotation-mongo-context.xml"/>
	<beans:import resource="annotation-solr-context.xml"/>
	
    
   	<!--  ApiKeyService -->
   	<beans:bean name="annotation_apiKeyService" class="eu.europeana.corelib.db.service.mock.impl.MockApiKeyServiceImpl"/>
			
    <!--  java api bean -->
	<beans:bean id="annotationService" class="eu.europeana.annotation.web.service.impl.AnnotationServiceImpl">
    	<beans:property name="configuration" ref="configuration"/>
    	<beans:property name="apiKeyService" ref="annotation_apiKeyService"/> 	
    </beans:bean>
    
    <!--  TODO: this is not needed anymore as the controllers are automatically discovered -->
    <!--  rest api bean -->
	<beans:bean id="annotationRest" class="eu.europeana.annotation.web.service.controller.AnnotationRest">
		<beans:property name="annotationService" ref="annotationService"/>
		<beans:property name="configuration" ref="configuration"/>
    </beans:bean>	
    
	<beans:bean id="managementRest" class="eu.europeana.annotation.web.service.controller.admin.ManagementRest">
		<beans:property name="annotationService" ref="annotationService"/>
		<beans:property name="configuration" ref="configuration"/>
    </beans:bean>	
   
	<beans:bean id="providerManagementRest" class="eu.europeana.annotation.web.service.controller.admin.ProviderManagementRest">
		<beans:property name="annotationService" ref="annotationService"/>
		<beans:property name="configuration" ref="configuration"/>
    </beans:bean>	
   
</beans:beans>
