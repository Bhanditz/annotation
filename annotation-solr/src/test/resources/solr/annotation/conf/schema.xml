	<!--  default properties -->
	<uniqueKey>annotation_id_url</uniqueKey>
	<solrQueryParser defaultOperator="AND" />
	<defaultSearchField>body_text</defaultSearchField>
	
	<!--  Generated Fields -->
	<copyField source="body_value" dest="body_text" />
	
