		<fieldType name="string" class="solr.StrField"
			sortMissingLast="true" omitNorms="true" />
				
		<fieldType name="long" class="solr.TrieLongField"
			precisionStep="0" positionIncrementGap="0" />
		
		<fieldType name="date" class="solr.TrieDateField" omitNorms="true"
			precisionStep="0" positionIncrementGap="0" />
		<fieldType name="text" class="solr.TextField"
			positionIncrementGap="100">
			<analyzer type="index">
				<tokenizer class="solr.WhitespaceTokenizerFactory" />
				<filter class="solr.StopFilterFactory" ignoreCase="true"
					words="stopwords.txt" enablePositionIncrements="true" />
				<filter class="solr.WordDelimiterFilterFactory"
					generateWordParts="1" generateNumberParts="1" catenateWords="1"
					catenateNumbers="1" catenateAll="0" splitOnCaseChange="1" />
				<filter class="solr.LowerCaseFilterFactory" />
				<filter class="solr.SnowballPorterFilterFactory" language="English"
					protected="protwords.txt" />
			</analyzer>
			<analyzer type="query">
				<tokenizer class="solr.WhitespaceTokenizerFactory" />
				<filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt"
					ignoreCase="true" expand="true" />
				<filter class="solr.StopFilterFactory" ignoreCase="true"
					words="stopwords.txt" enablePositionIncrements="true" />
				<filter class="solr.WordDelimiterFilterFactory"
					generateWordParts="1" generateNumberParts="1" catenateWords="0"
					catenateNumbers="0" catenateAll="0" splitOnCaseChange="1" />
				<filter class="solr.LowerCaseFilterFactory" />
				<filter class="solr.SnowballPorterFilterFactory" language="English"
					protected="protwords.txt" />
			</analyzer>
		</fieldType>
		<fieldType name="keyword" class="solr.TextField">
			<analyzer>
				<tokenizer class="solr.KeywordTokenizerFactory" />
				<filter class="solr.LowerCaseFilterFactory" />
				<!--  
				<filter class="solr.PatternReplaceFilterFactory" pattern="([.^:;()\\[\\],])"
					replacement="" replace="all" />
				<filter class="solr.PatternReplaceFilterFactory" pattern="([-+])"
					replacement=" " replace="all" />
				-->
			</analyzer>
		</fieldType>
	</types>
	
	<fields>
		<!-- @Field("annotationIdUrl")  -->
		<field name="annotation_id_url" type="keyword"  indexed="true"
			required="true" multiValued="false" stored="true"/>
		
		<!-- @Field("internalTypeKey")  -->
		<field name="internal_type" type="keyword"  indexed="false"
			required="true" multiValued="false" stored="true"/>
		
		<!-- @Field("bodyInternalTypeKey")  -->
		<field name="body_internal_type" type="keyword"  indexed="false"
			required="false" multiValued="false" stored="true"/>
		
		<!-- @Field("targetInternalTypeKey")  -->
		<field name="target_internal_type" type="keyword"  indexed="false"
			required="false" multiValued="false" stored="true"/>
		
		<!-- @Field("targetUrls")  -->
		<field name="target_id" type="keyword"  indexed="true"
			required="true" multiValued="true" stored="true"/>
		
		<!-- @Field("targetRecordIds")  -->
		<field name="target_record_id" type="keyword"  indexed="true"
			required="true" multiValued="true" stored="false"/>
		
		
		<!-- @Field("motivationKey")  -->
		<field name="motivation" type="keyword"  indexed="true"
			required="true" multiValued="false" stored="true"/>
		
		
		<field name="generator_id" type="keyword"  indexed="true"
			required="false" multiValued="false" stored="true"/>
		
		<field name="generator_name" type="keyword"  indexed="true"
			required="false" multiValued="false" stored="true"/>
				
		<!-- @Field("body_tag_id")  -->
		<field name="body_tag_id" type="keyword"  indexed="false"
			required="false" multiValued="false" stored="true"/>
		
		<!-- @Field("bodyValue")  -->
		<field name="body_value" type="string"  indexed="true"
			required="false" multiValued="false" stored="true"/>
		
		<!-- @Field("updatedTimestamp")  -->
		<field name="updated_timestamp" type="long"  indexed="true"
			required="true" multiValued="false" stored="true"/>
				
		<!-- Body Text Search Field, generated -->
		<field name="body_text" type="text" indexed="true" stored="false"
			multiValued="false" />
				
		<!-- @Field("created")  -->
		<field name="created_timestamp" type="long"  indexed="true"
			required="true" multiValued="false" stored="true"/>
				
		<!-- @Field("generated")  -->
		<field name="generated_timestamp" type="long"  indexed="true"
			required="true" multiValued="false" stored="true"/>
				
		<!-- @Field("moderationScore")  -->
		<field name="moderation_score" type="long" indexed="true"
			required="true" multiValued="false" stored="true"/>
				
